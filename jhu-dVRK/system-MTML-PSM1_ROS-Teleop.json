/* -*- Mode: Javascript; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- */
{
    // see https://dvrk.readthedocs.io
    "$id": "dvrk-system.schema.json",
    "$version": "1",
    "component_manager": {
        "components":
        [
            // this is to use the dvrk_arm_from_ros class
            {
                "shared-library": "dvrk_arm_from_ros",
                "class-name": "dvrk_psm_from_ros",
                "constructor-arg": {
                    "Name": "PSM1",
                    "Period": 0.01
                }
            }
        ]
    }
    ,
    "IOs":
    [
        {
            "name": "IO1",
            "port": "fw",
            "protocol": "broadcast-query-read-write"
        }
    ]
    ,
    "arms":
    [
        {
            "name": "PSM1",  // created previously using custom components
            "type": "PSM_GENERIC",
            "component": "PSM1",
            "interface": "PSM1",
            "skip_ROS_bridge": true // this is to make sure we don't republish on the same topics as the remote PSM
        }
        ,
        {
            "name": "MTML",
            "type": "MTM",
            "IO": "IO1",
            "serial": "22723"
        }
    ]
    ,
    "consoles":
    [
        {
            "name": "console1",
            "input_type": "PEDALS_ONLY",
            "IO_pedals": {
                "IO": "IO1",
                "IO_file": "io/sawRobotIO1394-MTMR-foot-pedals-QLA1.json"
            }
            ,
            "teleop_PSMs":
            [
                {
                    "MTM": "MTML",
                    "PSM": "PSM1"
                }
            ]
        }
    ]
}

